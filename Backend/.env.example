# --------------------
# LLM Runtime (local)
# --------------------
OLLAMA_BIN=/path/to/ollama
OLLAMA_HOST=127.0.0.1:11434
OLLAMA_NUM_GPU_LAYERS=0
OLLAMA_MAX_LOADED_MODELS=1
OLLAMA_CONTEXT_LENGTH=1024
OLLAMA_KEEP_ALIVE=2m

# --------------------
# Planner / Model
# --------------------
PLANNER_MODE=llm
V3_MODEL=gemma2:2b-instruct-q4_K_M

# --------------------
# Database
# --------------------
DB_ENGINE=mysql+pymysql
DB_HOST=localhost
DB_PORT=3307
DB_USER=root
DB_PASS=

# --------------------
# Schema exclusions
# --------------------
EXCLUDE_SCHEMAS=information_schema,mysql,performance_schema,sys,phpmyadmin